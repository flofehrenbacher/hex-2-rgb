{
  "keywords": [
    "rgb",
    "rgba",
    "hex",
    "alpha",
    "color",
    "convert",
    "typescript"
  ],
  "author": "Florian Fehrenbacher",
  "license": "ISC",
  "name": "@zero-deps/hex-2-rgb",
  "repository": {
    "type": "git",
    "url": "https://github.com/flofehrenbacher/hex-2-rgb.git"
  },
  "version": "2.2.1",
  "description": "lightweight typed function to convert hexes of format #rrggbb to rgb(x,y,z) or rgba(x,y,z,a) without runtime dependencies",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "test": "node --test",
    "type-check": "tsc --noEmit",
    "prebuild": "rm -rf dist",
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "size": "size-limit",
    "prepublishOnly": "npm run build && npm run size"
  },
  "size-limit": [
    {
      "limit": "400 B",
      "path": "dist/index.cjs"
    },
    {
      "limit": "120 B",
      "path": "dist/index.js"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "11.2.0",
    "prettier": "3.6.2",
    "size-limit": "11.2.0",
    "tsup": "8.5.0",
    "typescript": "5.9.3"
  },
  "volta": {
    "node": "24.10.0"
  }
}